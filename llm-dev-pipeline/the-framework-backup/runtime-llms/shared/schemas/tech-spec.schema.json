{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Technical specification",
  "type": "object",
  "required": [
    "id",
    "title",
    "description",
    "assumptions",
    "scope",
    "constraints",
    "deliverables",
    "acceptance_criteria"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "unique identifier"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "assumptions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "scope": {
      "type": "string"
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "deliverables": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "acceptance_criteria": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}