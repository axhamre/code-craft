{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Commit object",
  "type": "object",
  "required": [
    "repo",
    "branch",
    "commit_message",
    "files_changed",
    "metadata"
  ],
  "properties": {
    "repo": {
      "type": "string"
    },
    "branch": {
      "type": "string"
    },
    "commit_message": {
      "type": "string"
    },
    "files_changed": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "path",
          "change_type",
          "diff_summary"
        ],
        "properties": {
          "path": {
            "type": "string"
          },
          "change_type": {
            "enum": [
              "added",
              "modified",
              "deleted"
            ]
          },
          "diff_summary": {
            "type": "string"
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "required": [
        "timestamp",
        "author"
      ],
      "properties": {
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "author": {
          "type": "string"
        }
      }
    }
  }
}