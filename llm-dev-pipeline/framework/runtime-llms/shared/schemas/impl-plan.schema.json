{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Implementation plan",
  "type": "object",
  "required": [
    "id",
    "tech_spec_id",
    "overview",
    "steps",
    "timeline"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "tech_spec_id": {
      "type": "string"
    },
    "overview": {
      "type": "string"
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "step_id",
          "description",
          "owner"
        ],
        "properties": {
          "step_id": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "owner": {
            "type": "string"
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "timeline": {
      "type": "object",
      "required": [
        "start_date",
        "end_date"
      ],
      "properties": {
        "start_date": {
          "type": "string",
          "format": "date"
        },
        "end_date": {
          "type": "string",
          "format": "date"
        }
      }
    }
  }
}